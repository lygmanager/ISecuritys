<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RightAndLeftEditText="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/bar_titlebar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_titlebar"
        android:paddingTop="5dp">
    <LinearLayout
        android:id="@+id/ll_equip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/CST_NO"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="单位"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/BG_ADR"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="地点"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/BF_TYP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="不符合项"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/BG_NOT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="内容"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/JC_DTM"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="检查时间"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/KH_NUM"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="考核金额"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/PLAN_DTM"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="计划时间"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/GLUSR_ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="责任人"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/KH_FS"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="考核分数"
            app:nameSize="80dp"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/BGB_NO"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="主键"
            app:nameSize="80dp"
            android:visibility="gone"
            />
        <net.bhtech.lygmanager.ui.tag.RightAndLeftEditText
            android:id="@+id/PICTUREA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:nameText="主键"
            app:nameSize="80dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/ic_camera"
            android:visibility="invisible"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>